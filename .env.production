# FRA Atlas Production Environment Configuration

# Application Settings
NODE_ENV=production
PORT=8000
FRONTEND_URL=https://your-domain.com

# Database Configuration (Update with your production database)
DATABASE_URL=postgresql://fra_user:CHANGE_THIS_PASSWORD@your-db-host:5432/fra_atlas
DB_HOST=your-db-host
DB_PORT=5432
DB_NAME=fra_atlas
DB_USER=fra_user
DB_PASSWORD=CHANGE_THIS_PASSWORD

# Redis Configuration (Update with your production Redis)
REDIS_URL=redis://your-redis-host:6379
REDIS_HOST=your-redis-host
REDIS_PORT=6379

# JWT Configuration (MUST CHANGE IN PRODUCTION)
JWT_SECRET=CHANGE-THIS-TO-A-VERY-SECURE-SECRET-KEY-IN-PRODUCTION-2024
JWT_EXPIRES_IN=24h

# Mapbox Configuration (Optional - for advanced mapping)
MAPBOX_TOKEN=your-mapbox-access-token-here
REACT_APP_MAPBOX_TOKEN=pk.your-mapbox-token-here

# Security Settings (Update with your domain)
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,tiff,shp,kml,kmz

# OCR Configuration
TESSERACT_CONFIG=--oem 3 --psm 6
OCR_LANGUAGES=eng+hin

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/fra-atlas.log

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@fraatlas.gov.in

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=your-ga-id-here

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups